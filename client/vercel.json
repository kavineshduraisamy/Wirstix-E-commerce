{
  "rewrites": [
    {
      "source": "/api/:path*",
      "destination": "https://wristix-server.vercel.app/api/:path*"
    },
    {
      "source": "/uploads/:path*",
      "destination": "https://wristix-server.vercel.app/uploads/:path*"
    },
    {
      "source": "/(.*)",
      "destination": "/index.html"
    }
  ]
}
